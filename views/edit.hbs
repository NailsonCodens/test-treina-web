<main class="container mt-2">
    <form action="/diaristas/{{diarista.id}}?_method=Patch" method="POST">
    <div class="mb-3">
        <label class="form-label">Name: </label>
        <input type="text" class="form-control" id="name" value="{{diarista.name}}" name="name" placeholder="Nome do diarista"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Endereço: </label>
        <input type="text" class="form-control" id="endereco" name="endereco" value="{{diarista.endereco}}" placeholder="Endereço"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Idade: </label>
        <input type="number" class="form-control" id="idade" name="idade" value="{{diarista.idade}}" placeholder="Idade"/>
    </div>    
    <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</main>